<!DOCTYPE html>
<html>
  <head>
    <title>LoginPage</title>
    <!--bootstrap-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!--fontawesome-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <!--w3school-->
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-lg-12"><h1>welcome to our course system!</h1></div>
        <div class="col-lg-12"><h4>please login first for our service. If you don't have account, please register one.</h4></div>
      </div>
      <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6 loginblock">
          <h4>Student ID</h4>
          <input placeholder="10XYYYZZZ" type="text" id="id">
          <p id="idERR" class="white">*Please fill out this blank.</p>
          <h4>Password</h4>
          <input placeholder="password" type="password" id="pwd">
          <p id="pwdERR" class="white">*Please fill out this blank.</p>
          <br><br>
          <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-4"><button class="btn btn-success" onclick="LoginCheck()">Login</button></div>
            <div class="col-lg-4"></div>
          </div>
          <br><br>
          <p>If you didn't have account, please fill out the form above and click <span onclick="RegisterCheck()">here</span> to register.</p>
        </div>
        <div class="col-lg-3"></div>
      </div>
    </div>
  </body>
</html>
<script src="javascripts/jquery-3.3.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
<style>
input{
  width: 100%;
  border: 2px solid black;
  border-radius: 10px;
  padding: 0.5vh 3px;
  outline: none;
}
.loginblock{
  border: 2px solid black;
  border-radius: 10px;
  margin: 10vh 0;
  padding: 3vh 5%;
}
.loginblock button{
  width: 100%;
}
.loginblock span{
  color: #1E90FF	;
  cursor: pointer;
}
.errMsg{color: red !important;}
.white{color: white;}
</style>
<script>
var nullValue = "";
function LoginCheck(){
  var id = $("#id").val();
  var pwd = $("#pwd").val();
  if(id==nullValue) $("#idERR").toggleClass("errMsg");
  if(pwd==nullValue) $("#pwdERR").toggleClass("errMsg");
  $.ajax({
    method: "POST",
    url: "/loginCheck",
    data:{
      id: id,
      pwd, pwd
    }
  }).done(function(data){
    if(data=="Account Exist."){
      alert("Login Success!");
      window.location.href = "/home";
    }else{
      alert("Error Occur!");
      window.location.href = "/";
    }
  });
}
function RegisterCheck(){
  var id = $("#id").val();
  var pwd = $("#pwd").val();
  if(id==nullValue) $("#idERR").toggleClass("errMsg");
  if(pwd==nullValue) $("#pwdERR").toggleClass("errMsg");
  $.ajax({
    method: "POST",
    url: "/registerCheck",
    data:{
      id: id,
      pwd, pwd
    }
  }).done(function(data){
    if(data=="Account Exist."){
      alert("Account Already Exist!");
      window.location.href = "/";
    }else{
      alert("Build Account Success!");
      window.location.href = "/home";
    }
  });
}
</script>